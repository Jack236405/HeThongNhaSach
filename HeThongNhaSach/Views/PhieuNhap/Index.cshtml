@model IEnumerable<HeThongNhaSach.Models.Hoadon>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
@*            <th>
                @Html.DisplayNameFor(model => model.Loaihd)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Ngaylap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tinhtrang)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
@*            <td>
                @Html.DisplayFor(modelItem => item.Loaihd)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Ngaylap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manv)
            </td>
            <td>
                
                  @if (item.Tinhtrang == 0)
                  {
                      <span>Đã đề xuất</span>
                  }
                   else if (item.Tinhtrang == 1)
                    {
                      <span>Đồng ý nhập</span>
                    }
                  else if (item.Tinhtrang == 2)
                    {
                     <span>Từ chối</span>
                    }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Mahd">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Mahd">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
